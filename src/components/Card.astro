---
const {
  land1,
  land2,
  land3,
  land4,
  land5,
  land6,
  cardImage,
  cardImageAlt,
  rejsedato,
  pris = "10.000 kr",
  bgcolor = "bg-[#FF5900]"
} = Astro.props;
---
<div class={`transition-colors duration-300 hover:bg-[#FFD9C2] ${bgcolor}`}>
  <div class="card w-full h-full shadow-sm border-r-0">
    
    <img
      src={cardImage}
      alt={cardImageAlt || "Billede"}
      class="border-r-0"
    />

    <div>
      <div class="grid grid-cols-2 grid-rows-3 text-3xl">
        <div>{land1}</div>
        <div class="text-right">{land2}</div>
        <div>{land3}</div>
        <div class="text-right">{land4}</div>
        <div>{land5}</div>
        <div class="text-right">{land6}</div>
      </div>
      <div class="card-body border-r-0">
        <div class="grid grid-cols-2">
          <div>
            <div>Næste rejse</div>
            <div class="næsterejsedato">{rejsedato}</div>
          </div>
          <div>
            <div>Pris</div>
            <div class="pris">{pris}</div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>







